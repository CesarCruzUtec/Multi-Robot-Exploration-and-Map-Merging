    <include file="$(find multi_tb_slam)/launch/kailey_move_base.launch"/>
  </group>

  <group ns = "$(arg second_tb3)">
    <include file="$(find multi_tb_slam)/launch/kailey_move_base.launch"/>
  </group> -->

