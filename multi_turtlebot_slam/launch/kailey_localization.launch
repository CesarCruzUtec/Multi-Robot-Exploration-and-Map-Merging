<launch>

  <arg name="ns" default="tb3_0"/>

  <node pkg="slam_toolbox" type="localization_slam_toolbox_node" name="slam_toolbox_$(arg ns)" output="screen">
    <!-- <rosparam command="load" file="$(find slam_toolbox)/config/mapper_params_localization.yaml" /> -->
    <rosparam command="load" file="$(find multi_turtlebot_slam)/config/mapper_params_localization.yaml" />
    <param name="base_frame" value="$(arg ns)/base_footprint"/>
    <param name="odom_frame" value="$(arg ns)/odom"/>
    <param name="map_frame"  value="$(arg ns)/map"/>
    <remap from="/map" to="$(arg ns)/map"/>
    <remap from="/scan" to="$(arg ns)/scan"/>
    <remap from="/initialpose" to = "initialpose_$(arg ns)"/>
  </node>

</launch>